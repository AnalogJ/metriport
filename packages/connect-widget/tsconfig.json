{
  "extends": "@tsconfig/create-react-app/tsconfig.json",
  "compilerOptions": {
    // START - From the list of options from https://github.com/tsconfig/bases/blob/main/bases/strictest.json
    // that were applied to packages/api/tsconfig.json and not already present on @tsconfig/create-react-app
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "checkJs": true,
    // END
  },
  "include": ["src"]
}
